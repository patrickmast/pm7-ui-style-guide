{
  "name": "pm7-ui-style-guide",
  "version": "1.3.15",
  "description": "The official source of truth for UI, styling, and branding across all PM7 applications.",
  "main": "dist/pm7-ui-style-guide.umd.js",
  "module": "dist/pm7-ui-style-guide.es.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:examples": "vite build --config vite.config.examples.js && npm run build:all-docs && npm run copy:all-docs",
    "build:static": "npm run build:examples && node scripts/prerender.js",
    "build:all-docs": "npm run build:dialog-doc && npm run build:menu-doc && npm run build:button-doc && npm run build:input-doc && npm run build:tab-selector-doc && npm run build:card-doc && npm run build:theme-toggle-doc",
    "copy:all-docs": "mkdir -p examples/dist/dialog examples/dist/menu examples/dist/button examples/dist/input examples/dist/tab-selector examples/dist/card examples/dist/theme-toggle && cp static/dialog-doc.html examples/dist/dialog/docs.html && cp static/menu-doc.html examples/dist/menu/docs.html && cp static/button-doc.html examples/dist/button/docs.html && cp static/input-doc.html examples/dist/input/docs.html && cp static/tab-selector-doc.html examples/dist/tab-selector/docs.html && cp static/card-doc.html examples/dist/card/docs.html && cp static/theme-toggle-doc.html examples/dist/theme-toggle/docs.html",
    "build:dialog-tldr": "node scripts/generate-dialog-tldr.js",
    "build:dialog-doc": "node scripts/generate-dialog-doc.js",
    "build:menu-doc": "node scripts/generate-menu-doc.js",
    "build:button-doc": "node scripts/generate-button-doc.js",
    "build:input-doc": "node scripts/generate-input-doc.js",
    "build:tab-selector-doc": "node scripts/generate-tab-selector-doc.js",
    "build:card-doc": "node scripts/generate-card-doc.js",
    "build:theme-toggle-doc": "node scripts/generate-theme-toggle-doc.js",
    "prerender": "node scripts/prerender.js",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patrickmast/pm7-ui-style-guide.git"
  },
  "author": "Patrick Mast",
  "license": "ISC",
  "files": [
    "dist",
    "src/components/menu/pm7-menu.css",
    "src/components/dialog/pm7-dialog.css",
    "src/components/card/pm7-card.css",
    "src/components/tab-selector/pm7-tab-selector.css",
    "src/components/theme-toggle/pm7-theme-toggle.css",
    "src/css/variables.css",
    "src/globals.css",
    "index.d.ts",
    "colors.d.ts",
    "tokens.d.ts"
  ],
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.6.2",
    "tailwind-merge": "^3.2.0"
  },
  "peerDependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "lucide-react": "^0.501.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cheerio": "^1.1.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "fs-extra": "^11.3.0",
    "playwright": "^1.53.0",
    "postcss": "^8.4.33",
    "puppeteer": "^24.10.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
